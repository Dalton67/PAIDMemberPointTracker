<div class="events index">
  <h2>Events</h2>

  <%= link_to("Add New Event", new_event_path, :class => 'action new') %>
  <%= link_to("View Members", members_path, :class => 'action index') %>
  <%= link_to("Admin Users Menu", members_path, :class => 'action index') %>
  <%= button_to "Refresh Events", getEvents_events_path,:method => :get %>
  <table class="listing" summary="Member list">
    <tr class="header">
      <th>ID</th>
      <th>Title</th>
      <th>Date</th>
      <th>Points</th>
    </tr>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.id %></td>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.points_worth %></td>
      <td class="actions">
        <%= link_to("Show", event_path(event), :class => 'action show') %>
        <%= link_to("Edit", edit_event_path(event), :class => 'action edit') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
