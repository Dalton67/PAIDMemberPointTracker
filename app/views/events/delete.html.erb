<%= link_to("<< Back to List", events_path, :class => 'back-link') %>

<div class="events delete">
  <h2>Delete Event</h2>

  <%= form_for(Event.find(params[:id]), :method => 'delete') do |f| %>

    <div style="text-align:center">
      <p style="text-align:center">Are you sure you want to permanently delete this event?</p>
      <p style="text-align:center", class="reference-name"><%= @event.title %></p>
    </div>

    <div class="form-buttons">
      <%= f.submit "Delete Event", :class => "button" %>
    </div>

  <% end %>
</div>