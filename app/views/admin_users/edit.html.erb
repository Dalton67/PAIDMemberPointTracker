<% @page_title = "New Admin User" %>
<%= link_to("<< Back to List", admin_users_path, :class => 'back-link') %>

<center>
<div class="admin-users edit">
  <h2>Create Admin User</h2>

  <%= form_for(@admin_user) do |f| %>

    
    <table summary="Admin User form fields">
    <tr>
      <th>First Name</th>
      <td><%= f.text_field(:first_name) %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= f.text_field(:last_name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Username</th>
      <td><%= f.text_field(:username) %></td>
    </tr>
    <tr>
        <th>Password</th>
        <td><%= f.password_field(:password) %></td>
    </tr>
  </table>

    <div class="form-buttons">
      <%= f.submit("Update Admin User") %>
    </div>

  <% end %>
</div>
