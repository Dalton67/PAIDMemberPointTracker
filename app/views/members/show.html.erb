<%= link_to("<< Back to List", members_path, :class => 'back-link') %>

<div class="centertable">
  <h2>Member Details</h2>

  <table summary="Member detail view">
    <tr>
      <th>ID</th>
      <td><%= @member.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @member.first_name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @member.email %></td>
    </tr>
    <tr>
      <th>Fall Points</th>
      <td><%= @member.total_points %></td>
    </tr>
    <tr>
      <th>Fall Points</th>
      <td><%= @member.fall_points %></td>
    </tr>
    <tr>
      <th>Spring Points</th>
      <td><%= @member.spring_points %></td>
    </tr>
    <tr>
      <th>Total Points</th>
      <td><%= @member.total_points %></td>
    </tr>
    <tr>
    <th>Events Attended</th>
     <% Event.find(@member.event_ids).each do |event| %>
      <td><%= event.title %>
      <% end %>
      </td>
      
    </tr>
  </tr>     
  </table>

  <h2>Events Attended</h2>
  <table summary="Events view">
  <% Event.find(@member.event_ids).each do |event| %>
  <tr>
    <th>Event Name</th>
    <td><%= event.title %>
    <% end %>
  </tr>
</table>

</div>
